<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="at.turtles.ChooseList"
            prefHeight="400.0" prefWidth="600.0">

    <gridLinesVisible>true</gridLinesVisible>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>

    <!-- TODO: Design + Reihenfolge der Eigenschaften vereinheitlicen -->
    <Label text="Choose your preferred word list!" fx:id="titleLabel"
           GridPane.rowIndex="2" GridPane.columnIndex="3" />
    <Button text="Turtle names" fx:id="turtleNamesButton" onAction="#loadTurtleNames"
            GridPane.rowIndex="4" GridPane.columnIndex="2" styleClass="button1"/>
    <!-- Froschnamen sind leichter -> Reihenfolge Ã¤ndern und Hinweis implementieren -->
    <Button text="Frog names" fx:id="frogNamesButton" onAction="#loadFrogNames"
            GridPane.rowIndex="4" GridPane.columnIndex="4" styleClass="button1"/>
    <Button text="EDIT THIRD LIST" fx:id="thirdListButton" onAction="#loadThirdList"
            GridPane.rowIndex="6" GridPane.columnIndex="2" styleClass="button1"/>
    <Button text="Use your own words" fx:id="userListButton" onAction="#loadUserList"
            GridPane.rowIndex="6" GridPane.columnIndex="4" styleClass="button1"/>
    <Button text="Back" fx:id="backButton" onAction="#goBack"
            GridPane.rowIndex="8" GridPane.columnIndex="3" styleClass="button2"/>
</GridPane>
