<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="at.turtles.ChooseList"
          hgap="10" vgap="10"
          prefHeight="300.0" prefWidth="200.0"
          styleClass="StartGridPane">
   <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

    <gridLinesVisible>true</gridLinesVisible>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>

    <!-- TODO: Design -->
    <!-- Title -->
    <Label text="Choose your preferred word list!" fx:id="titleLabel"
           GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="5" GridPane.halignment="CENTER"/>

    <!-- Button for Frog names -->
    <!-- Label zu groÃŸ - line break? -->
    <Label text="easy (may contain toads)" fx:id="frogNamesLabel"
           GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.halignment="CENTER"/>
    <Button text="Frog names" fx:id="frogNamesButton" onAction="#loadFrogNames"
            GridPane.rowIndex="2" GridPane.columnIndex="2" styleClass="button1"/>

    <!-- Button for Turtle names -->
    <Label text="hard" fx:id="turtleNamesLabel"
           GridPane.rowIndex="2" GridPane.columnIndex="3" GridPane.halignment="RIGHT"/>
    <Button text="Turtle names" fx:id="turtleNamesButton" onAction="#loadTurtleNames"
            GridPane.rowIndex="2" GridPane.columnIndex="4" styleClass="button1"/>

    <!-- Button for other Word list-->
    <!-- TODO: implement third list-->
    <Button text="EDIT THIRD LIST" fx:id="thirdListButton" onAction="#loadThirdList"
            GridPane.rowIndex="3" GridPane.columnIndex="2" styleClass="button1"/>

    <!-- Button for Users own list-->
    <Label text="Choose your words wisely!" fx:id="userListLabel"
           GridPane.rowIndex="3" GridPane.columnIndex="3" GridPane.halignment="RIGHT"/>
    <Button text="Use your own words" fx:id="userListButton" onAction="#loadUserList"
            GridPane.rowIndex="3" GridPane.columnIndex="4" styleClass="button1"/>

    <!-- Buttons for back and continue -->
    <Button text="Back" fx:id="backButton" onAction="#goBack"
            GridPane.rowIndex="5" GridPane.columnIndex="1" styleClass="button2"/>
    <Button text="Continue" fx:id="continueButton" onAction="#goToNextScene"
            GridPane.rowIndex="5" GridPane.columnIndex="4" styleClass="button2"/>

</GridPane>
