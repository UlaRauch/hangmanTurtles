<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane prefHeight="500.0" prefWidth="1000.0" styleClass="StartGridPane" hgap="20" vgap="20"
          xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="at.turtles.StartController">

    <gridLinesVisible>false</gridLinesVisible>
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <!-- TODO: Design -->
    <Label fx:id="titleLabel" text="Save the Animals" styleClass="textStartTitle"
           alignment="CENTER" prefHeight="206.0" prefWidth="752.0"
           textAlignment="CENTER" textFill="#010600"
           GridPane.columnIndex="2" GridPane.rowIndex="1" />

    <Button fx:id="startButton" text="Start" styleClass="invisibleButtonBig"
            alignment="CENTER" minWidth="130"
            textAlignment="CENTER"
            GridPane.columnIndex="3" GridPane.rowIndex="2" GridPane.halignment="CENTER"
            onAction="#startButtonclicked" />

    <Button fx:id="exitButton" text="Exit" styleClass="invisibleButtonBig"
            alignment="CENTER" minWidth="130"
            textAlignment="CENTER"
            GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.halignment="CENTER"
            onAction="#onExit" />

    <columnConstraints>
        <ColumnConstraints maxWidth="150.0" minWidth="75.0" prefWidth="150.0" />
        <ColumnConstraints maxWidth="150.0" minWidth="50.0" prefWidth="150.0" />
        <ColumnConstraints maxWidth="800.0" minWidth="451.0" prefWidth="800.0" />
        <ColumnConstraints maxWidth="150.0" minWidth="50.0" prefWidth="150.0" />
        <ColumnConstraints maxWidth="150.0" minWidth="75.0" prefWidth="150.0" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints />
        <RowConstraints maxHeight="500.0" minHeight="87.0" prefHeight="340" />
        <RowConstraints maxHeight="160" minHeight="1.5999999999999943" prefHeight="160" />
    </rowConstraints>


</GridPane>
