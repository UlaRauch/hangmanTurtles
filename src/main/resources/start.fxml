<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="at.turtles.StartController"
          prefHeight="400.0" prefWidth="600.0"
          hgap="10" vgap="10">

    <gridLinesVisible>true</gridLinesVisible>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>

    <!-- TODO: Design -->
    <Label text="Save the Animals" fx:id="titleLabel" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    <Button text="Start" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="button1"/>
    <Button text="Exit" fx:id="exitButton" onAction="#onExit" styleClass="button2"
            GridPane.rowIndex="5" GridPane.columnIndex="2"/>


</GridPane>
